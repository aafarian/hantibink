{
  "name": "hantibink",
  "version": "1.0.0",
  "description": "A modern dating app connecting the Armenian community worldwide",
  "private": true,
  "workspaces": [
    "mobile"
  ],
  "scripts": {
    "mobile": "cd mobile && npm start",
    "mobile:ios": "cd mobile && npm run ios",
    "mobile:android": "cd mobile && npm run android",
    "lint": "cd mobile && npm run lint",
    "format": "cd mobile && npm run format"
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "mobile/**/*.{js,jsx,ts,tsx}": [
      "cd mobile && prettier --write",
      "cd mobile && eslint --fix"
    ],
    "*.{json,md}": [
      "prettier --write"
    ]
  }
}

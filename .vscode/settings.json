{
  // Root-level VS Code settings for when opening from /hantibink
  "eslint.workingDirectories": [
    {
      "directory": "./mobile",
      "changeProcessCwd": true
    }
  ],

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.associations": {
    "*.js": "javascriptreact"
  }
}

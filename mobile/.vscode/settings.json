{
  // ESLint configuration that works from any parent directory
  "eslint.workingDirectories": [
    // When opened from /mobile directory
    {
      "directory": ".",
      "changeProcessCwd": true
    },
    // When opened from /hantibink (parent) directory
    {
      "directory": "./mobile",
      "changeProcessCwd": true
    }
  ],

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always"
  },

  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact"],
  "files.associations": {
    "*.js": "javascriptreact"
  }
}

{
  "name": "hantibink-api",
  "version": "1.0.0",
  "description": "Backend API server for Hantibink dating app",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "pretest": "node test-setup/ensure-db.js",
    "test": "vitest",
    "test:all": "node test-setup/ensure-db.js && vitest run",
    "test:ui": "node test-setup/ensure-db.js && vitest --ui",
    "test:run": "node test-setup/ensure-db.js && vitest run",
    "test:coverage": "node test-setup/ensure-db.js && vitest run --coverage",
    "test:watch": "node test-setup/ensure-db.js && vitest watch",
    "migrate:up": "node scripts/db-migrate.js up",
    "migrate:down": "node scripts/db-migrate.js down",
    "migrate:status": "node scripts/db-migrate.js status",
    "migrate:prod": "NODE_ENV=production node scripts/db-migrate.js up",
    "migrate:prod:down": "NODE_ENV=production node scripts/db-migrate.js down",
    "migrate:prod:status": "NODE_ENV=production node scripts/db-migrate.js status",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker-compose -f docker-compose.test.yml down",
    "test:db:stop": "docker-compose -f docker-compose.test.yml stop",
    "test:db:reset": "docker-compose -f docker-compose.test.yml down -v && docker-compose -f docker-compose.test.yml up -d",
    "test:migrate": "TEST_DATABASE_URL=postgresql://test:test@localhost:5433/hantibink_test npx prisma migrate deploy",
    "test:ci": "npm run test:db:reset && npm run test:migrate && npm run test:run && npm run test:db:down",
    "lint": "eslint src/ test-setup/ --ext .js",
    "lint:fix": "eslint src/ test-setup/ --ext .js --fix",
    "format": "prettier --write src/",
    "db:generate": "npx prisma generate",
    "db:push": "npx prisma db push",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:deploy": "npx prisma migrate deploy",
    "db:studio": "npx prisma studio",
    "db:seed": "node src/scripts/seed.js",
    "db:reset": "npx prisma migrate reset --force",
    "db:setup": "npm run db:generate && npm run db:push && npm run db:seed",
    "setup:dev": "node src/scripts/dev-setup.js",
    "build": "echo 'Build step - add your build commands here'",
    "docker:build": "docker build -t hantibink-api .",
    "docker:run": "docker run -p 3000:3000 hantibink-api"
  },
  "keywords": [
    "dating-app",
    "api",
    "nodejs",
    "express",
    "firebase",
    "postgresql"
  ],
  "author": "Hantibink Team",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.1",
    "express-validator": "^7.2.1",
    "firebase-admin": "^12.7.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^6.9.16",
    "prisma": "^5.22.0",
    "redis": "^4.7.0",
    "sharp": "^0.33.5",
    "socket.io": "^4.8.1",
    "stripe": "^17.3.1",
    "uuid": "^10.0.0",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/jest": "^29.5.14",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.2.4",
    "c8": "^10.1.3",
    "dotenv-cli": "^10.0.0",
    "eslint": "^8.57.1",
    "eslint-config-node": "^4.1.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.7",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4",
    "vitest-mock-extended": "^3.1.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/server.js",
      "!src/config/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
